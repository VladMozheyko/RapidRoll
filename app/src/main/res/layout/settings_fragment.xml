<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settings_background"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ЗВУК"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_black"
            android:layout_marginTop="30dp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_line"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/settings_sound_on_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:text="ON"
                android:textStyle="bold"
                android:textSize="30dp"
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/white"
                android:background="@drawable/settings_on_btn_background" />


            <Button
                android:id="@+id/settings_sound_off_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:text="OFF"
                android:textStyle="bold"
                android:textSize="30dp"
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/white"
                android:background="@drawable/settings_on_btn_background" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="МУЗЫКА"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_black"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_line"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/settings_music_on_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:text="ON"
                android:textStyle="bold"
                android:textSize="30dp"
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/white"
                android:background="@drawable/settings_on_btn_background" />


            <Button
                android:id="@+id/settings_music_off_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:text="OFF"
                android:textStyle="bold"
                android:textSize="30dp"
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/white"
                android:background="@drawable/settings_on_btn_background" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewGameControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="УПРАВЛЕНИЕ"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_black"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_line"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <ImageButton
                android:id="@+id/settings_game_control_on_btn"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/settings_finger_icon"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@drawable/settings_on_btn_background" />

            <ImageButton
                android:id="@+id/settings_game_control_arrow_left_btn"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/settings_control_arrow_left"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@color/settings_btn_background_color"
                app:tint="@color/white"/>

            <ImageButton
                android:id="@+id/settings_game_control_arrow_right_btn"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/settings_control_arrow_right"
                android:scaleType="fitCenter"
                android:padding="5dp"
                android:background="@color/settings_btn_background_color"
                app:tint="@color/white"/>

    </LinearLayout>

        <TextView
            android:id="@+id/textViewSpeedMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="РЕЖИМ"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_black"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_line"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />

                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">


                    <Button
                        android:id="@+id/settings_mode_easy_btn"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:text="Легкий"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="5dp"

                        android:background="@drawable/main_button_background" />

                    <Button
                        android:id="@+id/settings_mode_medium_btn"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:text="Средний"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/main_button_background" />


                    <Button
                        android:id="@+id/settings_mode_hard_btn"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:text="Тяжелый"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/main_button_background" />
            />
                </LinearLayout>

        <TextView
            android:id="@+id/textViewBallColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ЦВЕТ ШАРОВ"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_black"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:src="@drawable/settings_line"
            android:layout_gravity="center"
            android:layout_marginTop="5dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <!-- так, вот тут не хватает галочки - куда ее запихать? ее же нельзя "присетить" -->

            <ImageButton
                android:id="@+id/settings_choose_color_viola_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/choose_ball_color_viola" />

            <ImageButton
                android:id="@+id/settings_choose_color_blue_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/choose_ball_color_blue" />

            <ImageButton
                android:id="@+id/settings_choose_color_pink_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/choose_ball_color_pink" />

            <ImageButton
                android:id="@+id/settings_choose_color_blue_light_btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/choose_ball_color_blue_light" />

        </LinearLayout>




</LinearLayout>
</ScrollView>
